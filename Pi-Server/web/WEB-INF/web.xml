<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignupController</servlet-name>
        <servlet-class>controllers.SignupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>controllers.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewMeetupController</servlet-name>
        <servlet-class>controllers.NewMeetupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMembersController</servlet-name>
        <servlet-class>controllers.GetMembersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MeetupsController</servlet-name>
        <servlet-class>controllers.MeetupsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupMeetupController</servlet-name>
        <servlet-class>controllers.SignupMeetupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewMeetupController</servlet-name>
        <url-pattern>/newMeetup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMembersController</servlet-name>
        <url-pattern>/getMembers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MeetupsController</servlet-name>
        <url-pattern>/meetups</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupMeetupController</servlet-name>
        <url-pattern>/signupMeetup</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
