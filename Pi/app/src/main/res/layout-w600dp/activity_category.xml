<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blue1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"

    tools:context="cmu.rrg.pi.ui.MyPostsActivity">

    <include layout ="@layout/fragment_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="false"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <TextView
            android:background="@drawable/textviewstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Study"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/purple1"
            android:id="@+id/studyTextView"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/sporsTextView"
            android:paddingTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            />

        <TextView
            android:background="@drawable/textviewstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sport"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textSize="40dp"
            android:textColor="@color/pink3"
            android:id="@+id/sporsTextView"
            android:layout_below="@+id/studyTextView"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"/>

        <TextView
            android:background="@drawable/textviewstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Party"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textSize="40dp"
            android:textColor="@color/red"
            android:id="@+id/partyTextView"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/sporsTextView"
            android:layout_weight="0.25"
            />

        <TextView
            android:background="@drawable/textviewstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Religion"
            android:textStyle="italic"
            android:textSize="40dp"
            android:textColor="@color/blue3"
            android:id="@+id/religionTextView"
            android:layout_below="@+id/partyTextView"
            android:layout_alignStart="@+id/partyTextView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            />

        <include layout ="@layout/fragment_bottom_category" />

    </LinearLayout>

</LinearLayout>